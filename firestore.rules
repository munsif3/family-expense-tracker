rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function
    function isAuthenticated() {
      return request.auth != null;
    }

    // Users: Users can read all profiles (to find members), write their own
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Households: Create allowed for auth, Read/Update for members
    // Allow list (query) for authenticated users to find households by name
    // Households
    match /households/{householdId} {
      allow create: if isAuthenticated();
      allow list: if isAuthenticated(); // For checking name uniqueness
      
      // Allow read if authenticated (relaxed)
      allow get: if isAuthenticated();
      
      // Allow update if:
      // 1. User is already a member (normal operations)
      // 2. User is adding themselves to memberIds (joining)
      allow update: if isAuthenticated() && (
        request.auth.uid in resource.data.memberIds ||
        (request.resource.data.memberIds.hasAll(resource.data.memberIds) && 
         request.resource.data.memberIds.size() == resource.data.memberIds.size() + 1 &&
         request.resource.data.memberIds[request.resource.data.memberIds.size() - 1] == request.auth.uid) ||
         // Simplified: Just check if we are only modifying memberIds and adding auth.uid?
         // Firestore rules for set math are tricky.
         // Let's go with a looser rule for the MVP: Allow update if auth user is IN the NEW memberIds list?
         // No, then I can overwrite everything if I add myself.
         
         // Let's use the standard "Join" rule pattern:
         // Allow update if the ONLY change is adding request.auth.uid to memberIds
         (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberIds']) &&
          request.resource.data.memberIds.hasAll(resource.data.memberIds) &&
          request.auth.uid in request.resource.data.memberIds)
      );
      match /settings/{document=**} {
        allow read, write: if isAuthenticated();
      }
    }

    // Transactions: Ensure user is the owner
    match /transactions/{transactionId} {
        allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
        allow read: if isAuthenticated() && (
          resource.data.userId == request.auth.uid || 
          resource.data.householdId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.householdId
        );
        allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
        allow delete: if isAuthenticated() && (
          resource.data.userId == request.auth.uid || 
          resource.data.householdId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.householdId
        );
    }
    
    match /payment_methods/{paymentMethodId} {
        allow read, write: if true;
    }

    match /assets/{assetId} {
        allow read, write: if isAuthenticated();
    }

    match /categories/{categoryId} {
        allow read, write: if isAuthenticated(); 
    }

    match /recurring_transactions/{recurringId} {
        allow read, write: if isAuthenticated();
    }
    
    match /goals/{goalId} {
        allow read, write: if isAuthenticated();
    }


    // Trips Module
    match /trips/{tripId} {
      allow create: if isAuthenticated() && 
        request.resource.data.participantIds.hasAll([request.auth.uid]);
      
      allow read, update, delete: if isAuthenticated() && 
        request.auth.uid in resource.data.participantIds;

      function isTripParticipant() {
        return request.auth.uid in get(/databases/$(database)/documents/trips/$(tripId)).data.participantIds;
      }

      match /travelFunds/{docId} {
        allow read, write: if isTripParticipant();
      }
      match /expenses/{docId} {
        allow read, write: if isTripParticipant();
      }
      match /returns/{docId} {
        allow read, write: if isTripParticipant();
      }
    }

    // Default deny for anything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
